# Ice Skate Sharpening Ticket System - Environment Variables
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=generate-a-random-32-character-secret-key-here
FLASK_ENV=production

# Application Settings
BASE_URL=https://yourdomain.railway.app

# SMS Service (GatewayAPI)
# Sign up at https://gatwayapi.eu/ to get your token
GATEWAYAPI_TOKEN=your-gatewayapi-token-here

# Payment Processing (Stripe)
# Get these from your Stripe dashboard
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key-here

# Database (Optional - Railway provides PostgreSQL)
# Leave blank to use Railway's managed database
DATABASE_URL=

# Development Settings (set to false for production)
DEBUG=false
