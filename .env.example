# Ice Skate Sharpening Ticket System - Environment Variables
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=generate-a-random-32-character-secret-key-here
FLASK_ENV=production

# Application Settings
BASE_URL=https://yourdomain.railway.app

# SMS Service (GatewayAPI)
GATEWAYAPI_TOKEN=your-gatewayapi-token
# Send SMS confirmation after successful payment (set to 'true' to enable, default is 'false')
SEND_PAYMENT_CONFIRMATION_SMS=false

# Payment (Stripe)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Database (Optional - Railway provides PostgreSQL)
# Leave blank to use Railway's managed database
DATABASE_URL=
# Public URL for SMS links
BASE_URL=http://localhost:5000

# Development Settings (set to false for production)
DEBUG=false
# Google reCAPTCHA (get keys from https://www.google.com/recaptcha/admin)
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
